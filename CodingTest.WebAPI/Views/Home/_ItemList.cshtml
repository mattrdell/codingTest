
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>In Stock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: items">
        <tr>
            <td data-bind="text: ItemId"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Description"></td>
            <td data-bind="text: Price"></td>
            <td data-bind="text: QtyInStock"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" Purchase " data-bind="click: Purchase" /></td>
        </tr>
    </tbody>
</table>

<br />
<input type="button" class="btn btn-default" id="btnGetItems" value="Refresh" data-bind="click: getItems"/>


