@section Scripts {
    @Scripts.Render("~/KnockoutModels/ItemListViewModel")
}
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: students">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Description"></td>
            <td data-bind="text: Price"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" Purchase " data-bind="click: $parent.purchaseItem" /></td>
        </tr>
    </tbody>
</table>

<br />
<input type="button" class="btn btn-default" id="btnGetItems" value="Refresh" data-bind="click: getItems" />
